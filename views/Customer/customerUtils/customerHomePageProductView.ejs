<div>
    <% if (sellers.length==0) { %>
        <h3 class="noProductFound">No Product Found</h3>
    <% }else{%>
        <% for( let i= 0; i < sellers.length; i++ ) { %>
            <div class="productHolder">
                <div class="imageHolder">
                    <img src="<%=medicineInfo.productImage.split('|')[0]%>" alt="">
                </div>
                <div class="productName"><%= medicineInfo.name %></div>
                <div class="productManufacturer"><%= medicineInfo.manufacturer %></div>
                <div class="soldBy">Sold By : <%= sellers[i].sellerId.storeDetails.storeName %></div>
                <div class="useOf">Use : <%= medicineInfo.useOf %></div>
                <div class="price">Price : â‚¹ <%= sellers[i].price %></div>
                <div class="buttonHolder">
                    <div class="detailsButton"><button type="button">Details</button></div>
                    <input type="text" class="detailsButtonProductId" hidden value="<%= sellers[i].productId %>">
                    <div class="addToCartButton"><button type="button">Add To Cart</button></div>
                    <input type="text" class="addToCartProductId" hidden value="<%= sellers[i].productId %> <%= sellers[i]._id %>">
                </div>
            </div>
        <% } %>
    <%}%>
</div>
