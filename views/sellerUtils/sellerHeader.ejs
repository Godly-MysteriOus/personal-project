    <div class="moreFeature">
        <div class="menuBtn featureIcon"><img src="/images/menu-black.png" alt="menubtn"></div>
        <div class="closeBtn featureIcon header-hidden"><img src="/images/close-black.png" alt="closeBtn"></div>
    </div>
</header>

<script>
    const featureBtns = document.querySelector('.moreFeature');
    const menuBtn = document.querySelector('.menuBtn');
    const closeBtn = document.querySelector('.closeBtn');
    const featureBar = document.querySelector('.featureBar');
    featureBtns.addEventListener('click',(e)=>{
        menuBtn.classList.toggle('header-hidden');
        if(menuBtn.classList.contains('header-hidden')){
            featureBar.classList.remove('layover-hidden');
            featureBar.style.animation = 'showFeature 0.4s ease-in-out 1';
        }
        closeBtn.classList.toggle('header-hidden');
        if(closeBtn.classList.contains('header-hidden')){
            featureBar.style.animation = 'hideFeature 0.4s ease-in-out 1';
            setTimeout(()=>{
                featureBar.classList.add('layover-hidden');
            },350)
        }
    })
</script>